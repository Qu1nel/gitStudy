[user]
	email = ExampleMail@example.com
	name = Name
[alias]
    s = status
    ss = status --short
    br = branch -v
    cm = commit
    cmd = commit -v
    ls = log --graph --oneline --all
    lss = log --graph --pretty=format:'%h - %an, %ar : %s'
    fullog = log --graph --pretty=format:'HASH -> %H\n\n author   - name: %an, email: %ae\n commiter - name: %cn, email %ce\n\ndata: %ad [%ar]\n\ncontent: %s\n'	
    unstage = restore --staged
    diffst = diff --staged
    diffT = difftool
    mergeT = mergetool
    chck = checkout
	visual = !gitk
[core]
	autocrlf = false
[init]
	defaultbranch = main
[diff]
	tool = nvimdiff
[merge]
	tool = nvimdiff2
[color]
	ui = true
